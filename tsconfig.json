{
    "compilerOptions": {
      "outDir": "./dist/",
      "rootDir": "./src",
      "resolveJsonModule": true,
      "noImplicitAny": true,
      "module": "es6",
      "target": "es5",
      "jsx": "react",
      "allowJs": true,
      "checkJs": true,
      "moduleResolution": "node",
      "removeComments": true,
      "noEmitOnError": true,
      "declaration": true,
      "strict": true,
    },

    "include": ["./src/**/*.ts", "./custom.d.ts"]
}